@model CNPMLyThuyet.Model.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_NhanSu.cshtml";
}

<h2>Tạo mới</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
