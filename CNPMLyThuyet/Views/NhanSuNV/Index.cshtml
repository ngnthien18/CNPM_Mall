@model IEnumerable<CNPMLyThuyet.Model.NhanVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NhanSu.cshtml";
}

<h2>Quản lý nhân viên</h2>

<p>
   <a href="/NhanSuNV/Create" class="btn btn-primary">Tạo mới</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenNV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.NameID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhongBan.TenPB)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.NameID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhongBan.TenPB)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaNV }, new {@class="btn btn-primary"}) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaNV },new {@class="btn btn-success"}) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaNV },new {@class="btn btn-danger"})
        </td>
    </tr>
}

</table>
