@model IEnumerable<CNPMLyThuyet.Model.Tang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_KinhDoanh.cshtml";
}

<h2>Trang quản lý tầng</h2>

<p>
    <a href="/KinhDoanhTang/Create" class="btn btn-primary">Tạo mới</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenTang)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenTang)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaTang },new {@class="btn btn-success"}) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaTang },new {@class="btn btn-primary"}) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaTang },new {@class="btn btn-danger"})
        </td>
    </tr>
}

</table>
