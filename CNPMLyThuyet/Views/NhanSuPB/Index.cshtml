@model IEnumerable<CNPMLyThuyet.Model.PhongBan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NhanSu.cshtml";
}

<h2>Trang quản lí phòng ban</h2>

<p>
    <a href="/NhanSuPB/Create" class="btn btn-primary">Tạo mới</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenPB)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenPB)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaPB },new {@class="btn btn-primary"}) |
            @Html.ActionLink("Details", "Details", new { id=item.MaPB }, new {@class="btn btn-success"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaPB },new {@class="btn btn-danger"})
        </td>
    </tr>
}

</table>
